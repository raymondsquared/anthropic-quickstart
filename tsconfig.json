{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "dist",
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "types": ["Node"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
